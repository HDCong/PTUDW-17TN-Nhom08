{{#with room}}
<div class=" main-content container mb-4">
  <!-- <div class="main-content d-flex flex-column align-items-center no-gutters"> -->
  <div class="cover-image row no-gutters justify-content-center align-items-center mb-5">
    <p>BOOKING</p>
  </div>
  <!-- </div>  -->
</div>
<!-- <div class="booking-section"> -->
<div class="main-content container">
  <div class="row booking-section">
    {{{createReservation name price information}}}
    <div class="optional-booking col-lg-8">
      <p class="notify-user" id="notify-guest">
        You are booking as guest,
        <a style="color: #fff;" href="#">LOGIN</a> or
        <a style="color: #fff;" href="#">REGISTER</a> if you want to save
        your reservation on your account.
      </p>
      <div class="more-service">
        <h6 class="text-center">MORE SERVICES</h6>
        <div class="container">
          <div class="row more-items">
            <div class="form-check form-check-inline col-sm-6 m-0 p-1" id="items-extend" style="display: none;">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox3" />
              <label class="form-check-label" for="inlineCheckbox3" value="asdad">
                <strong>ssss</strong>value ooneonene hihi</label>
            </div>
          </div>
        </div>
      </div>
      <div class="fill-information">
        <h5 class="text-center">Fill your information</h5>
        <!-- <form> -->
        <form action="/booking" method="POST">
          <div class="form-row p-1">
            <div class="form-group col-md-6 p-1">
              <input type="hidden" for="userId" id="userId" name="userId" value="{{user.id}}">
              <input type="hidden" for="roomId" id="roomId" name="roomId" value="{{id}}">
              <input type="hidden" for="checkin" id="checkin" name="checkin" value="{{information.checkin}}">
              <input type="hidden" for="checkout" id="checkout" name="checkout" value="{{information.checkout}}">
              <input type="hidden" for="total" id="total" name="total" value="{{price}}">
              <input type="hidden" for="services" id="services" name="services" value="">
              <label for="cusname">Name*</label>
              <input type="text " class="form-control" name="cusname" id="cusname" placeholder="Your name "
                required />
              <label style="font-size: 12px; color: red; display: inline;">Name is require</label>
            </div>
            <div class="form-group col-md-6 p-1">
              <label for="cusphone">Phone*</label>
              <input type="number" class="form-control" for="cusphone" name="cusphone" id="cusphone"
                placeholder="Phone Number " required />
              <label style="font-size: 12px; color: red; display: inline;">Phone number is require</label>
            </div>
          </div>
          <div class="form-row p-1">
            <div class="form-group col-md-6 p-1">
              <label for="cusmail ">Email*</label>
              <input type="email" class="form-control" for="cusmail" name="cusmail" id="cusmail"
                placeholder="Email " required />
              <label style="font-size: 12px; color: red; display: inline;">Email is require</label>
            </div>
            <div class="form-group col-md-4 p-1">
              <label for="inputState ">Gender</label>
              <select id="cusstate " for="cusstate" name="cusstate" class="form-control">
                <option selected>Male</option>
                <option>Female</option>
                <option>Other</option>
              </select>
            </div>
          </div>

          <div class="form-group p-1">
            <label for="request ">Requests</label>
            <textarea class="form-control" id="request " name="request"rows="4 "></textarea>
          </div>
          <div class="form-row p-1">
            <div class="form-group col-md-4 p-1">
              <label for="custime ">Time Arrive*</label>
              <select id="custime " for="custime" name="custime" class="form-control" required>
                <option selected>I do not know</option>
                <option>1:00AM to 3:00AM</option>
                <option>3:00AM to 5:00AM</option>
                <option>5:00AM to 7:00AM</option>
                <option>7:00AM to 9:00AM</option>
                <option>9:00AM to 11:00AM</option>
                <option>11:00AM to 1:00PM</option>
                <option>1:00PM to 3:00PM</option>
                <option>3:00PM to 5:00PM</option>
                <option>5:00PM to 7:00PM</option>
                <option>7:00PM to 9:00PM</option>
                <option>9:00PM to 11:00PM</option>
                <option>11:00PM to 1:00AM</option>
              </select>
            </div>
          </div>
          <input type="hidden" for="reservationid" id="reservationid" name="reservationid">
          <!-- </form> -->
          <div class="text-center">
            <!--You can add col-lg-12 if you want -->
            <button type="submit" class="btn-dark btn" id="btn-checkout">
              Check out
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
